<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.example.android.musicapp.ArtistActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALBUMS"
        android:textSize="35sp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        android:fontFamily="sans-serif"

        />
        <TextView
            android:id="@+id/eminem_album"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:textSize="35sp"
            android:text="Eminem Curtain Call"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textAllCaps="true"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:background="#42A5F5"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            />
        <TextView
            android:id="@+id/camilla_cabello_album"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:textSize="35sp"
            android:text="Camilla Cabello Cabello"
            android:textAllCaps="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:background="#42A5F5"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            />
        <TextView
            android:id="@+id/MO_album"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:textSize="35sp"
            android:text="M0
Glass"
            android:textAllCaps="true"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:background="#42A5F5"
            android:paddingTop="10dp"
            android:paddingRight="170dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp"
            android:text="I will be using this section or activity to show and select the albums of various artists ."
            android:textColor="#000000"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/songs_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Songs"
                android:layout_marginBottom="20dp"
                android:textSize="30sp" />

            <Button
                android:id="@+id/artists_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artists"
                android:textSize="30sp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="40dp"/>

        </LinearLayout>
        <Button
            android:id="@+id/payments_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAYMENTS"
            android:textSize="30sp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/nowplaying_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Now Playing"
            android:textSize="30sp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</ScrollView>